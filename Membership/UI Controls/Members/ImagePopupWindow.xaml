<Window x:Class="Membership.UI_Controls.Members.ImagePopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Membership.UI_Controls.Members"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        WindowStartupLocation="CenterScreen"
        Title="ImagePopupWindow" Height="700" Width="880">
    <Grid>
        <Border Background="DarkGray"  >
            <Image Source="{Binding Path=ImageSource}" Margin="10"/>
        </Border>
    </Grid>
</Window>
