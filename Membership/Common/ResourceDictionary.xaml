    </Style>
    <Style x:Key="ComboBoxInputStyle" TargetType="{x:Type ComboBox}">
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Width" Value="130"/>
